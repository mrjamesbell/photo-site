# Wrangler configuration for Photo Gallery Worker
# Copy this file to wrangler.toml and fill in your values

name = "photo-gallery-worker"
main = "worker/index.js"
compatibility_date = "2024-01-01"

# KV Namespace bindings
[[kv_namespaces]]
binding = "PHOTO_METADATA"
id = "YOUR_KV_NAMESPACE_ID"

# R2 bucket bindings (optional - if you want direct access from Worker)
[[r2_buckets]]
binding = "PHOTOS"
bucket_name = "photos"

# Routes - update with your actual domain
routes = [
    { pattern = "photos.jrbnz.com/api/*", zone_name = "jrbnz.com" }
]

# For development
[env.development]
[[env.development.kv_namespaces]]
binding = "PHOTO_METADATA"
id = "YOUR_DEV_KV_NAMESPACE_ID"
